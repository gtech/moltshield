{
  "name": "moltshield",
  "version": "2.0.0",
  "description": "DATDP-based pre-inference defense for OpenClaw",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "npx tsx tests/evaluator.test.ts",
    "benchmark": "npm run benchmark:datdp && npm run benchmark:harmbench && npm run benchmark:zeroleaks && npm run benchmark:bon && npm run benchmark:fp",
    "benchmark:datdp": "npx tsx tests/benchmarks/datdp.ts",
    "benchmark:harmbench": "npx tsx tests/benchmarks/harmbench.ts",
    "benchmark:zeroleaks": "npx tsx tests/benchmarks/zeroleaks.ts",
    "benchmark:bon": "npx tsx tests/benchmarks/bon-attacks.ts",
    "benchmark:fp": "npx tsx tests/benchmarks/false-positives.ts",
    "patch:status": "npx tsx patch/core-patch.ts status",
    "patch:apply": "npx tsx patch/core-patch.ts apply",
    "patch:remove": "npx tsx patch/core-patch.ts remove",
    "install:hook": "mkdir -p ~/.openclaw/hooks/moltshield && cp -r patch/* ~/.openclaw/hooks/moltshield/",
    "install:skill": "mkdir -p ~/.openclaw/workspace/skills/moltshield && cp -r skill/* ~/.openclaw/workspace/skills/moltshield/",
    "install:all": "npm run build && npm run install:hook && npm run install:skill && npm run patch:apply"
  },
  "keywords": [
    "openclaw",
    "datdp",
    "jailbreak",
    "prompt-injection",
    "security"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.8.2"
  }
}
