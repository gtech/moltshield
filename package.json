{
  "name": "moltshield",
  "version": "2.0.0",
  "description": "Pre-inference prompt injection defense for OpenClaw",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "npx tsx tests/evaluator.test.ts && npx tsx tests/benchmarks/loaders.test.ts",
    "test:evaluator": "npx tsx tests/evaluator.test.ts",
    "test:loaders": "npx tsx tests/benchmarks/loaders.test.ts",
    "benchmark": "npm run benchmark:zeroleaks && npm run benchmark:fp",
    "benchmark:zeroleaks": "npx tsx tests/benchmarks/zeroleaks.ts",
    "benchmark:fp": "npx tsx tests/benchmarks/false-positives.ts",
    "benchmark:strategy": "npx tsx tests/benchmarks/strategy-comparison.ts",
    "patch:status": "npx tsx patch/core-patch.ts status",
    "patch:apply": "npx tsx patch/core-patch.ts apply",
    "patch:remove": "npx tsx patch/core-patch.ts remove",
    "patch:verify": "npx tsx patch/core-patch.ts verify",
    "install:hook": "mkdir -p ~/.openclaw/hooks/moltshield && cp -r patch/* ~/.openclaw/hooks/moltshield/",
    "install:skill": "mkdir -p ~/.openclaw/workspace/skills/moltshield && cp -r skill/* ~/.openclaw/workspace/skills/moltshield/",
    "install:all": "npm run build && npm run install:hook && npm run install:skill && npm run patch:apply"
  },
  "keywords": [
    "openclaw",
    "prompt-injection",
    "indirect-injection",
    "llm-security",
    "agentic-defense"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.1.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.8.2"
  }
}
